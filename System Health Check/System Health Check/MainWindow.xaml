<Window x:Class="SystemHealthCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Health Check" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="CPU Usage:" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="CpuUsageTextBlock" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Memory Usage:" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="MemoryUsageTextBlock" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Disk Usage:" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="DiskUsageTextBlock" FontSize="14" Margin="0,0,0,10"/>

            <Button Content="Refresh" Name="RefreshButton" FontSize="14" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>

